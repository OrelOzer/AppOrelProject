<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#393E46"
    android:gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:text="Profile"
        android:textSize="100px"
        android:textColor="#EEEEEE"
        android:gravity="center"
        android:textFontWeight="1500"/>
   
    <EditText
        android:layout_width="800px"
        android:layout_height="175px"
        android:id="@+id/etProfileUserName"
        android:textSize="70px"
         android:background="@android:color/white"
        android:textColor="@android:color/holo_blue_bright"
        android:hint="Username"
        android:paddingLeft="50px"
        android:textFontWeight="1000"
        android:layout_marginTop="20px"
        android:textColorHint="#EEEEEE"
        />
   
   
    <EditText
        android:layout_marginTop="20px"
        android:layout_width="800px"
        android:layout_height="175px"
        android:id="@+id/etProfilePhoneNumber"
        android:textSize="70px"
            android:background="@android:color/white"
         android:textColor="@android:color/holo_blue_bright"
        android:inputType="phone"
        android:hint="PhoneNumber"
        android:paddingLeft="50px"
        android:textFontWeight="1000"
        android:textColorHint="#EEEEEE"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="600px"
        android:layout_height="150px"
        android:background="#00ADB5"
        android:layout_marginTop="50px"
        android:text="appointments"
        android:shadowColor="@android:color/black"
        android:textSize="64px"
        android:textFontWeight="1500"
        android:id="@+id/btnProfileGetApp"
        android:textColor="#222831"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="600px"
        android:layout_height="150px"
        android:background="#00ADB5"
        android:layout_marginTop="50px"
        android:text="Take picture"
        android:shadowColor="@android:color/black"
        android:textSize="64px"
        android:textFontWeight="1500"
        android:id="@+id/RegisterPageTakePictureButton"
        android:textColor="#222831"/>
    <ImageView
        android:layout_width="600px"
        android:layout_height="150px"/>

</LinearLayout>